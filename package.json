{
  "name": "outings-with-friends",
  "version": "1.0.0",
  "description": "Mobile app for planning outings, trips, and social events with friends.",
  "main": "backend/src/index.js",
  "engines": {
    "node": "20.x"
  },
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon backend/src/index.js",
    "start": "node backend/src/index.js",

    "render-build": "npm install --omit=dev && npm run prisma:deploy",

    "start:all": "concurrently \"npm run dev\" \"cd outings_app && flutter run -d windows\"",

    "test": "cross-env NODE_ENV=test jest --config backend/jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --config backend/jest.config.js --watch",
    "admin:stats": "node backend/scripts/admin.js stats",
    "admin:env": "node backend/scripts/admin.js env:check",
    "admin:backup": "node backend/scripts/admin.js backup:print",

    "prisma:deploy": "prisma migrate deploy --schema backend/prisma/schema.prisma --env-file backend/.env",
    "prisma:reset": "prisma migrate reset -f --schema backend/prisma/schema.prisma --env-file backend/.env",
    "prisma:generate": "prisma generate --schema backend/prisma/schema.prisma --env-file backend/.env",

    "db:reset": "prisma migrate reset -f --schema backend/prisma/schema.prisma --dotenv-file backend/.env",
    "db:seed": "node backend/prisma/seed.js",
    "db:reset-seed": "npm run db:reset && npm run db:seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitorCavez/Outings-with-Friends.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VitorCavez/Outings-with-Friends/issues"
  },
  "homepage": "https://github.com/VitorCavez/Outings-with-Friends#readme",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "file-type": "^21.0.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "prisma": "^6.12.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/socket.io": "^3.0.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "prisma": {
    "schema": "backend/prisma/schema.prisma",
    "seed": "node backend/prisma/seed.js"
  }
}
